#include <stdio.h>

int main()
{
      int a[3][3],i,j,sum1,sum2;
    printf("enter the elements of matrix A:\n");
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            scanf("%d",&a[i][j]);
            
        }
    }
     for(i=0;i<3;i++)
    {
        sum1=0;
        for(j=0;j<3;j++)
        {
            printf(" %2d ",a[i][j]);
            sum1=sum1+a[i][j];
           
        }
        printf("%2d",sum1);
        printf("\n");
        
    }
    for(i=0;i<3;i++)
    {
        sum2=0;
        for(j=0;j<3;j++)
        {
           sum2=sum2+a[j][i];
        
           
        }
        printf(" %d ",sum2);
    }
    return 0;
}

OUTPUT:-
enter the elements of matrix A:
1
2
3
4
5
6
7
8
9
  1   2   3  6
  4   5   6 15
  7   8   9 24
